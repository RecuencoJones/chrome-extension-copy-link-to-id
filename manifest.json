{
  "name": "Copy link to ID",
  "version": "0.1.0",
  "description": "Copy links to ID anchors without need to open DevTools",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ]
    }
  ],
  "icons": {
    "16": "icon-16x16.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "80"
}
